package com.magneticreason.fitnium.api;

import com.magneticreason.fitnium.FitniumFixture;



public class FitniumBrowserAPI {

    /**
     * Tell BaseFitniumFixture to stop
	 * @return nothing
     *
     * <br/><br/>
     * | close the browser | 
     */
    public final static void closeTheBrowser ( FitniumFixture fitnium) {
        fitnium.getSelenium().stop ();
    }

    /**
     * Clicks the close button of the browser, effectively closely the browser window
	 * @return nothing
     *
     * 
     * <br/><br/>
     * | click the close button | 
     */
    public final static void clickTheCloseButton ( FitniumFixture fitnium ) {
        fitnium.getSelenium().close();
    }

    /**
     * Clicks the back button on the browser
	 * @return nothing
     *
     * 
     * <br/><br/>
     * | click the back button | 
     */
    public final static void clickTheBackButton ( FitniumFixture fitnium ) {
        fitnium.getSelenium().goBack ();
    }

    /**
     * Clicks the refresh button on the browser
	 * @return nothing
     *
     * 
     * <br/><br/>
     * | click the refresh button | 
     */
    public final static void clickTheRefreshButton ( FitniumFixture fitnium ) {
        fitnium.getSelenium().refresh ();
    }


}
